<odoo>
  <data>
    <record model="ir.ui.view" id="caja_taller.form">
      <field name="name">caja_taller.form</field>
      <field name="model">caja_taller</field>
      <field name="arch" type="xml">
        <form string="taller form">
            <sheet>
                <h1><field name="name"/></h1>
                <group>
                    <group>
                        <field name="value" />
                    </group> 
                    <group>
                        <field name="value2"/>
                    </group>  
                </group>
                <notebook>
                    <page  string ="Descrition"/>
                        <field name ="description"/>
                </notebook>    
            </sheet>    
        </form>  
      </field>
     </record>
      
     <record model="ir.ui.view" id="caja_taller.list"> 
         <field name="name">caja_taller.list</field>
         <field name="model">caja_taller</field>
         <field name="arch" type="xml">
             <tree>
              <field name="name"/>
              <field name="value"/>
              <field name="value2"/>
             </tree>
      </field>
     </record>
      
     <record model="ir.ui.view" id="caja_taller.search"> 
         <field name="name">caja_taller.search</field>
         <field name="model">caja_taller</field>
         <field name="arch" type="xml">
             <search>
              <field name="name"/>
              <field name="value"/>
             </search>
      </field>
     </record> 

